<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="kanti.tododer.ui.fragments.screens.todo_root_list.TodoRootListScreenFragment"
        android:label="TodoListFragment" >
        <action
            android:id="@+id/action_list_to_detail"
            app:destination="@id/todoDetailFragment" />
        <action
            android:id="@+id/action_list_to_preferences"
            app:destination="@id/mainPreferences" />
    </fragment>
    <fragment
        android:id="@+id/todoDetailFragment"
        android:name="kanti.tododer.ui.fragments.screens.todo_detail.TodoDetailScreenFragment"
        android:label="TodoDetailFragment" >
        <argument
            android:name="fullId"
            app:argType="string" />
        <action
            android:id="@+id/action_detail_to_preferences"
            app:destination="@id/mainPreferences" />
    </fragment>
    <fragment
        android:id="@+id/mainPreferences"
        android:name="kanti.tododer.ui.fragments.preferences.main.MainPreferences"
        android:label="MainPreferences" />
</navigation>